@page "/novaPagina"

<Titulo Texto="@nome"></Titulo>

<div class="mt-3">
    <label class="text-muted">Digite seu nome</label>
    <input class="form-control mt-1"  @bind-value=nome />
</div>

<div class="mt-2 mb-5">
    <button @onclick="Mudar" class="btn @corBotao">
        Confirma
    </button>
</div>

<div class="text-center m-3 rounded-3 p-5 shadow ">

    <h1>@nome</h1>
</div>

<div class="row border rounded-1" style="background-color: #f151f5">
    <div class="col" >Coluna 1</div>
    <div class="col">Coluna 2</div>
    <div class="col">Coluna 3</div>
</div>

@code 
{
    string nome = "Joãozinho";

    string minhaClasse = "";

    string corBotao = "btn-primary";


    void Mudar()
    {
        nome = "Alterou o nome para o texto aqui! 👍";
        minhaClasse = "text-primary";
        corBotao = "btn-success";
    }

}
